{{! template-lint-disable no-inline-styles }}

<FillUp
  class={{concat "weather " (if this.isCold "cold" "hot")}}
  style={{responsiveFontStyle}}

  @onChange={{action "onChange"}}
  @breakpoints={{hash
    small=(fill-up-gt 300)
    medium=(fill-up-gt 450)
    large=(fill-up-gt 650)
  }}
as |F|>
  <div class="top-drawer">
    <span class="city">
      {{this.city.name}}
    </span>

    {{#if F.breakpoints.medium}}
      {{this.city.flag}}
    {{/if}}

    {{#unless F.breakpoints.small}}
      <br>
    {{/unless}}

    <span class="temp">
      {{this.temp}} °C 
    </span>
  </div>
  {{#if F.breakpoints.large}}
    <div class="bottom-drawer">
      {{this.weather.label}}
      {{this.weather.icon}}
    </div>
  {{/if}}
</FillUp>